<div class="row">
    <% if signed_in? %>
        <aside class="span4">
            <section>
                <%= render 'shared/user_info' %>
            </section>
        </aside>
    <% end %>
    <div class="span8">
        <h3>Advert Feed</h3>
        <%= form_tag("/home", :method => "get") do %>
            <%= select_tag :category, options_for_select(Category.array.prepend(["All", 0]), params[:category]) %>
            <%= submit_tag "View", class: "btn btn-large btn-primary" %>
        <% end %>
        <%= render 'shared/feed' %>
    </div>
</div>



