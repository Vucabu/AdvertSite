<li id="<%= admin_feed_item.id %>">
    <%= link_to gravatar_for(admin_feed_item.user), admin_feed_item.user %>
    <span class="user">
        <%= link_to admin_feed_item.title, admin_feed_item.user %>
    </span>
    <span class="category">
        <%= admin_feed_item.category %>
    </span>
    <span class="content">
        <%= admin_feed_item.content %>
    </span>
    <br>
    <span class="email">
        Email: <%= admin_feed_item.email %>
    </span>
    <span class="city">
        City: <%= admin_feed_item.city %>
    </span>
    <span class="address">
        Address: <%= admin_feed_item.address %>
    </span>
    <div class="image">
        <%= image_tag admin_feed_item.image.url(:small) %>
    </div>
    <span class="timestamp_feed">
        Posted <%= time_ago_in_words(admin_feed_item.created_at) %> ago.
        <%= link_to "Edit", edit_advert_path(admin_feed_item)  %>
        <%= link_to "Delete", admin_feed_item, method: :delete,
                                                data: { confirm: "You sure?" },
                                                title: admin_feed_item.content %>
    </span>
</li>